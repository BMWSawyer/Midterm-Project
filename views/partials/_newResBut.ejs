<i class="bi bi-plus-circle-fill newResourceButton" data-toggle="modal" data-target="#addURLModal"></i>

<div class="modal fade" id="addURLModal" tabindex="-1" role="dialog" aria-labelledby="newResourceModal"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a New Resource</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="addResForm">
          <div class="mb-2">
            <input type="text" class="form-control" id="addResURLInput" placeholder="Add your resource URL">
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" form="addResForm" value="Submit" class="btn btn-primary">Save Resource</button>
      </div>
    </div>
  </div>
</div>
