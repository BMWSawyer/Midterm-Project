<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>ResourSave</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/register.css" type="text/css" />

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.0/font/bootstrap-icons.css"
    integrity="sha384-7ynz3n3tAGNUYFZD3cWe5PDcE36xj85vyFkawcF6tIwxvIecqKvfwLiaFdizhPpN" crossorigin="anonymous">

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
    crossorigin="anonymous"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <main class="container">

    <%- include('partials/_header') %>

      <%- include('partials/_search-bar') %>

        <!-- Resources Search Results -->
        <div class="container pb-3 resourceWall">
          <div class="d-grid gap-3" style="grid-template-columns: 1fr 1fr 1fr;">

            <% for (const resource of resources) { %>

              <div class="bg-light border rounded-3 resourceSingle">
                <div class="image">

                  <div class="overlay">
                    <a href="<%= resource.resourceUrl %>"><i
                        class="bi bi-arrow-up-right-square-fill go-to-url-wall"></i></a>
                    <%- (resource.resourceRating.liked===true) ? "<i class='bi bi-heart-fill is-favourite'></i>"
                      : "<i class='bi bi-heart is-favourite'></i>" %>
                  </div>

                  <img class="resourceImg" src="<%= resource.photoUrl %>">
                </div>
                <div class='resInfo'>
                  <div>
                    <%= resource.title %>
                  </div>
                  <div class="rating">

                    <!-- Check if the user has rated a resource and use that, otherwise default to the average rating -->
                    <% let rating=resource.resourceRating.rating ? resource.resourceRating.rating :
                      resource.averageRating; %>

                      <% for (let i=0; i < 5; i++) { %>
                        <i class="bi
                      <%= rating >= i+.5 ? 'bi-star-fill' : 'bi-star' %>
                      <%= resource.resourceRating.rating ? 'text-warning' : '' %>"></i>
                        <% } %>

                  </div>
                </div>
              </div>

              <% } %>
          </div>

  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

</body>

</html>
