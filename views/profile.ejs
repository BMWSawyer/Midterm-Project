<!DOCTYPE html>
<html lang="en">

  <%- include('partials/_head') %>

<body>
  <main class="container">

    <%- include('partials/_header') %>

      <section id="profile_information">
        <h4> Update Profile</h4>

        <!-- Error display -->
        <% if(typeof error !="undefined" ){ %>
          <p class="font-weight-bold" style="margin-top: 10px; color: red">
            <%= error %>
          </p>
          <% } %>

            <!-- Update Profile Form -->
            <!-- Get the userID and populate the fields of the form accordingly -->
            <div id="profile_form">
              <form class="w-75 me-3 text" action="/api/users/profile/update" method="POST">
                <input type="text" class="form-control" name="firstName" value="<%= `${user.firstName}` %>" aria-label="firstName">
                <input type="text" class="form-control" name="lastName" value="<%= `${user.lastName}` %>" aria-label="lastName">
                <input type="email" class="form-control" name="email" value="<%= `${user.email}` %>" aria-label="Email">
                <button type="submit" class="btn btn-primary">Save Profile Changes</button>
              </form>
            </div>
      </section>

  </main>

    <%- include('partials/_foot') %>

</body>

</html>
